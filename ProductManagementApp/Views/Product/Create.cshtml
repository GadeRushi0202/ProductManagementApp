@model ProductManagementApp.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded-4 border-0">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3>Create New Product</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="ProductName" class="form-label fw-bold"></label>
                            <input asp-for="ProductName" class="form-control form-control-lg shadow-sm" placeholder="Enter product name" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold"></label>
                            <input asp-for="CategoryId" class="form-control form-control-lg shadow-sm" placeholder="Enter category id" />
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Create" class="btn btn-primary btn-lg text-white fw-bold shadow-sm" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center bg-light rounded-bottom-4">
                    <a asp-action="Index" class="text-decoration-none text-primary fw-bold">Back to Product List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card-header {
        font-size: 1.4rem;
    }

    .form-control:focus {
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
        border-color: #0d6efd;
    }

    .card {
        border-radius: 1rem;
    }

    .card-header, .card-footer {
        border-radius: 1rem;
    }

    .btn-primary:hover {
        background-color: #0b5ed7;
    }
</style>
