@model ProductManagementApp.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="mb-4 text-center">
        <h2 class="text-danger fw-bold">Delete Product</h2>
        <p class="text-muted">Are you sure you want to delete this product?</p>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">
            <h5 class="mb-3 fw-semibold">Product Details</h5>
            <dl class="row">
                <dt class="col-sm-3 text-secondary">Product Id:</dt>
                <dd class="col-sm-9 fw-medium">@Model.ProductId</dd>

                <dt class="col-sm-3 text-secondary">Product Name:</dt>
                <dd class="col-sm-9 fw-medium">@Model.ProductName</dd>

                <dt class="col-sm-3 text-secondary">Category Id:</dt>
                <dd class="col-sm-9 fw-medium">@Model.CategoryId</dd>
            </dl>

            <div class="mt-4 d-flex justify-content-center">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="ProductId" />
                    <button type="submit" class="btn btn-danger btn-lg me-3 shadow-sm">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.12);
        }

    dl dt {
        font-weight: 500;
    }

    dl dd {
        margin-bottom: 1rem;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .btn-secondary:hover {
        background-color: #6c757d;
        border-color: #5a6268;
    }
</style>
