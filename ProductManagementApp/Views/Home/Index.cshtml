@model IEnumerable<ProductManagementApp.Models.ProductListVm>

@{
    ViewBag.Title = "Product List";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary fw-bold">Product List</h2>

    <div class="card shadow-lg border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle mb-0">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Product Id</th>
                            <th>Product Name</th>
                            <th>Category Id</th>
                            <th>Category Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr class="text-center">
                                <td>@product.ProductId</td>
                                <td class="text-start">@product.ProductName</td>
                                <td>@product.CategoryId</td>
                                <td>
                                    <span class="badge rounded-pill bg-gradient-info text-dark">
                                        @product.CategoryName
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (ViewBag.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link bg-light text-dark" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">
                                &laquo; Previous
                            </a>
                        </li>

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link @(i == ViewBag.CurrentPage ? "bg-primary text-white" : "bg-light text-dark")"
                                   asp-action="Index" asp-route-page="@i">@i</a>
                            </li>
                        }

                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link bg-light text-dark" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">
                                Next &raquo;
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
