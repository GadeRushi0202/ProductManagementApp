@model ProductManagementApp.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="text-primary fw-bold">Category Details</h2>
        <p class="text-muted">View complete information of this category</p>
    </div>

    <div class="card shadow-sm border-0 rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-body p-4">
            <dl class="row mb-4">
                <dt class="col-sm-4 fw-medium">Category ID</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryId)</dd>

                <dt class="col-sm-4 fw-medium">Category Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryName)</dd>
            </dl>

            <div class="d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-primary btn-lg shadow-sm">Edit</a>
                <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">Back to List</a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.12);
        }

    .btn-primary:hover {
        background-color: #0b5ed7;
        border-color: #0a58ca;
    }

    .btn-secondary:hover {
        background-color: #6c757d;
        border-color: #5a6268;
    }
</style>
