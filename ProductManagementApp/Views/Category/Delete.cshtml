@model ProductManagementApp.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="text-danger fw-bold">Delete Category</h2>
        <p class="text-muted">Are you sure you want to remove this category?</p>
    </div>

    <div class="card shadow-sm border-0 rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-body p-4">
            <dl class="row mb-4">
                <dt class="col-sm-4 fw-medium">Category ID</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryId)</dd>

                <dt class="col-sm-4 fw-medium">Category Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryName)</dd>
            </dl>

            <form asp-action="Delete" class="d-flex justify-content-between">
                <input type="submit" value="Delete" class="btn btn-danger btn-lg shadow-sm" />
                <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">Back to List</a>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.12);
        }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .btn-secondary:hover {
        background-color: #6c757d;
        border-color: #5a6268;
    }
</style>
